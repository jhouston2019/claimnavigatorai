{
  "name": "claimnavigatorai",
  "version": "1.0.0",
  "description": "AI-powered claim documentation tools with Netlify Functions",
  "scripts": {
    "build": "echo \"No build required\"",
    "dev": "netlify dev --port 8888",
    "start": "netlify dev --port 8888",
    "lint": "eslint . --ext .js,.ts,.tsx --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .js,.ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "echo \"No tests configured\"",
    "test:smoke": "node scripts/smoke.js",
    "migrate:supabase": "echo 'Apply SQL in supabase/migrations/* via Supabase CLI or Dashboard'",
    "validate:env": "node scripts/validate-env.js",
    "precommit": "npm run lint && npm run typecheck && npm run format:check",
    "predeploy": "npm run precommit && npm run test:smoke"
  },
  "dependencies": {
    "@netlify/blobs": "^6.3.0",
    "@netlify/functions": "^2.4.0",
    "@sendgrid/mail": "^8.1.6",
    "@sentry/node": "^8.0.0",
    "@supabase/supabase-js": "^2.39.0",
    "archiver": "^5.3.2",
    "busboy": "^1.6.0",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "docx": "^8.5.0",
    "html-docx-js": "^0.3.1",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.3",
    "jszip": "^3.10.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.1",
    "openai": "^4.24.1",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^1.1.1",
    "pdfkit": "^0.14.0",
    "@sparticvs/chromium": "^123.0.1",
    "puppeteer": "^22.7.1",
    "puppeteer-core": "^22.7.1",
    "html-to-docx": "^1.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sanitize-html": "^2.11.0",
    "stripe": "^14.10.0",
    "tesseract.js": "^5.0.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
